#!/usr/bin/perl

use strict;
use Geo::Dashboard;
use Geo::Dashboard::User::Settings;

# Requires 
#   @param: a - action
#   @param: s - session id

my $args = $in->Vars;
my $action = $args->{a};

if ( $action eq 'list' ) {
    my $trk_list = Geo::Dashboard::User::Settings->setting_list($args);
    print_json( $trk_list || {error=>"No tracks found"} );
}

elsif ( $action eq 'add' ) {
    my $trk_add = Geo::Dashboard::User::Settings->setting_add($args);
    print_json( $trk_add || {error=>"No tracks added"} );
}

elsif ( $action eq 'get' ) {
    my $trk_rec = Geo::Dashboard::User::Settings->setting_get($args);
    print_json( $trk_rec|| {error=>"No tracks found"} );
}

elsif ( $action eq 'set' ) {
    my $trk_rec = Geo::Dashboard::User::Settings->setting_set($args);
    print_json( $trk_rec|| {error=>"No tracks found"} );
}

else {
    print_json({error=>"Unknown action requested"});
}
